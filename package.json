{
	"name": "omnikernel",
	"version": "0.1.0",
	"type": "module",
	"description": "The ultimate modular architecture that streamlines EVERYTHING.",
	"types": "dist/types/index.d.ts",
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"scripts": {
		"build": "vite build && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
		"test": "pnpm test:smoke && pnpm test:unit && pnpm test:integration",
		"test:unit": "vitest run unit",
		"test:smoke": "vitest run smoke",
		"test:integration": "vitest run integration",
		"test:coverage": "vitest run --coverage",
		"check:type": "tsc --noEmit",
		"check:lint": "biome check --write",
		"check": "pnpm check:type && pnpm check:lint"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Hesprs/OmniKernel.git"
	},
	"homepage": "https://github.com/Hesprs/OmniKernel#readme",
	"bugs": {
		"url": "https://github.com/Hesprs/OmniKernel/issues"
	},
	"keywords": [
		"Architecture",
		"Modular",
		"Microkernel",
		"IPC",
		"TypeScript"
	],
	"author": {
		"name": "HeÌ„sperus",
		"email": "hesprs@outlook.com"
	},
	"license": "Apache-2.0",
	"packageManager": "pnpm@10.18.3",
	"devDependencies": {
		"@biomejs/biome": "2.3.7",
		"@rollup/plugin-terser": "^0.4.4",
		"@types/node": "^24.10.1",
		"@vitest/coverage-v8": "4.0.13",
		"tsc-alias": "^1.8.16",
		"typescript": "^5.9.3",
		"vite": "^7.2.4",
		"vitest": "^4.0.14"
	}
}